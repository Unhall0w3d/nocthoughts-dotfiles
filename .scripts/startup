#!/bin/bash
#  (                   (                (     
#  )\ )  *   )   (     )\ )  *   )      )\ )  
# (()/(` )  /(   )\   (()/(` )  /(   ( (()/(  
#  /(_))( )(_)|(((_)(  /(_))( )(_))  )\ /(_)) 
# (_)) (_(_()) )\ _ )\(_)) (_(_())_ ((_|_))   
# / __||_   _| (_)_\(_) _ \|_   _| | | | _ \  
# \__ \  | |    / _ \ |   /  | | | |_| |  _/  
# |___/  |_|   /_/ \_\|_|_\  |_|  \___/|_|    
                                          

SCRIPTSDIR=$HOME/.scripts

# Kill process if already running
_ps=(waybar mako dunst)
for _prs in "${_ps[@]}"; do
    if [[ $(pidof ${_prs}) ]]; then
        killall -9 ${_prs}
    fi
done

# Start Waybar
${SCRIPTSDIR}/statusbar &

# Apply Themes
${SCRIPTSDIR}/gtkthemes &

# Start Notifications
${SCRIPTSDIR}/notifications &

# Establish Xauthority
${SCRIPTSDIR}/xauthority &
