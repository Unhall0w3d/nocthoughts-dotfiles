#!/bin/bash

#  (              )  (                        
#  )\ )  *   ) ( /(  )\ )   (     (           
# (()/(` )  /( )\())(()/(   )\    )\ )   (    
#  /(_))( )(_)|(_)\  /(_)|(((_)( (()/(   )\   
# (_)) (_(_())  ((_)(_))  )\ _ )\ /(_))_((_)  
# / __||_   _| / _ \| _ \ (_)_\(_|_)) __| __| 
# \__ \  | |  | (_) |   /  / _ \   | (_ | _|  
# |___/  |_|   \___/|_|_\ /_/ \_\   \___|___|

used=$(df -h / | awk 'NR==2 {print $3}')
avail=$(df -h / | awk 'NR==2 {print $2}')
echo "$used / $avail"
